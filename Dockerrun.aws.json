{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "ozkhan/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "ozkhan/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "ozkhan/multi-worker",
      //host name is not required because nothing needs to talk to worker
      "essential": false
    },
    {
      "name": "nginx",
      "image": "ozkhan/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      //   link nginx to client and server with a one way link
      "links": ["client", "server"]
    }
  ]
}
